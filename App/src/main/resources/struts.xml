<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="guest" extends="struts-default">
        <action name="to_about_page">
            <result>/jsp/about.jsp</result>
        </action>
        <action name="to_service_list_page">
            <result>/jsp/servicelist.jsp</result>
        </action>
        <action name="to_login_page">
            <result>/jsp/login.jsp</result>
        </action>
        <action name="login" class="by.bsuir.spp.autoservice.action.SignInAction">
            <result name="error">
                <param name="statusCode">500</param>
            </result>
            <result name="login_error">/jsp/login.jsp</result>
            <result name="success" type="redirectAction">
                <param name="actionName">to_home_page</param>
                <param name="namespace">/</param>
            </result>
        </action>
        <action name="show_feedbacks" class="by.bsuir.spp.autoservice.action.ShowFeedbacksAction">
            <result name="success">
                <!--jsp page with feedbacks-->
            </result>
            <result name="error">
                <param name="statusCode">500</param>
            </result>
        </action>
        <action name="add_feedback" class="by.bsuir.spp.autoservice.action.SaveFeedbackAction">
            <result name="success" type="redirectAction">
                <param name="actionName">to_home_page</param>
                <param name="namespace">/</param>
            </result>
            <result name="error">
                <param name="statusCode">500</param>
            </result>
        </action>
    </package>
    <package name="common" extends="struts-default" namespace="/">
        <action name="to_home_page">
            <result>/index.jsp</result>
        </action>
    </package>
    <package name="user_common" extends="struts-default">
        <action name="logout" class="by.bsuir.spp.autoservice.action.SignOutAction">
            <result name="success" type="redirectAction">
                <param name="actionName">to_home_page</param>
                <param name="namespace">/</param>
            </result>
        </action>
    </package>
    <package name="admin" extends="struts-default">
        <action name="show_acceptance_acts" class="by.bsuir.spp.autoservice.action.ShowAcceptanceActListAction">
            <result name="error">
                <param name="statusCode">500</param>
            </result>
            <result name="success">/jsp/acceptance_acts.jsp</result>
        </action>
        <action name="show_passing_acts" class="by.bsuir.spp.autoservice.action.ShowPassingActListAction">
            <result name="error">
                <param name="statusCode">500</param>
            </result>
            <result name="success">/jsp/passing_acts.jsp</result>
        </action>
        <action name="save_act" class="by.bsuir.spp.autoservice.action.SaveActAction">
            <result name="error">
                <param name="statusCode">500</param>
            </result>
            <result name="success">
                <param name="actionName">show_acceptance_acts</param>
            </result>
        </action>
        <action name="show_act" class="by.bsuir.spp.autoservice.action.ShowActAction">
            <result name="success">
                <!--act jsp page-->
            </result>
            <result name="error">
                <param name="statusCode">500</param>
            </result>
        </action>
    </package>
    <package name="mechanic" extends="struts-default">
        <action name="save_order_detail_application">
            <result name="error">
                <param name="statusCode">500</param>
            </result>
            <result name="success" type="redirectAction">
                <param name="actionName">
                    to_home_page
                </param>
            </result>
        </action>
        <action name="save_repair_report" class="by.bsuir.spp.autoservice.action.SaveRepairReportAction">
            <result name="success">
                <!--jsp page with message about successful save-->
            </result>
            <result name="save_error">
                <!--jsp page with repair report form-->
            </result>
            <result name="error">
                <param name="statusCode">500</param>
            </result>
        </action>
    </package>
    <package name="manager" extends="struts-default">
        <action name="show_dismiss" class="by.bsuir.spp.autoservice.action.ShowDismissPageAction">
            <result name="success">/jsp/dismiss.jsp</result>
            <result name="error">
                <param name="statusCode">500</param>
            </result>
        </action>
        <action name="dismiss" class="by.bsuir.spp.autoservice.action.DismissEmployeeAction">
            <result name="success" type="redirectAction">
                <param name="actionName">to_home_page</param>
            </result>
            <result name="error">
                <param name="statusCode">500</param>
            </result>
        </action>
        <action name="show_register" class="by.bsuir.spp.autoservice.action.ShowRegistrationPageAction">
            <result name="error">
                <param name="statusCode">500</param>
            </result>
            <result name="success">/jsp/registration.jsp</result>
        </action>
        <action name="registration_user" class="by.bsuir.spp.autoservice.action.RegistrationAction">
            <result name="error">
                <param name="statusCode">500</param>
            </result>
            <result name="success">
                <!--jsp page with message about success registration-->
            </result>
            <result name="reg_error">/jsp/registration.jsp</result>
        </action>
        <action name="save_detail_invoice" class="by.bsuir.spp.autoservice.action.SaveDetailInvoiceAction">
            <result name="error">
                <param name="statusCode">500</param>
            </result>
            <result name="success">
                <param name="actionName">
                    show_fill_detail_invoice
                </param>
            </result>
        </action>
        <action name="show_fill_detail_invoice" class="by.bsuir.spp.autoservice.action.ShowFillDetailInvoiceAction">
            <result name="error">
                <param name="statusCode">500</param>
            </result>
            <result name="success">
                    /jsp/detail_invoice.jsp
            </result>
        </action>
        <action name="show_repair_reports" class="by.bsuir.spp.autoservice.action.ShowRepairReportListAction">
            <result name="success">
                <!--jsp page with repair reports-->
            </result>
            <result name="error">
                <param name="statusCode">500</param>
            </result>
        </action>
    </package>
</struts>