<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="guest" extends="struts-default">
        <action name="to_login_page">
            <result>/jsp/login.jsp</result>
        </action>
        <action name="login" class="by.bsuir.spp.autoservice.action.SignInAction">
            <result name="error">
                <param name="statusCode">500</param>
            </result>
            <result name="success" type="redirectAction">
                <param name="actionName">to_home_page</param>
                <param name="namespace">/</param>
            </result>
        </action>
    </package>
    <package name="common" extends="struts-default" namespace="/">
        <action name="to_home_page">
            <result>/index.jsp</result>
        </action>
    </package>
    <package name="user_common" extends="struts-default">
        <action name="logout" class="by.bsuir.spp.autoservice.action.SignOutAction">
            <result name="success" type="redirectAction">
                <param name="actionName">to_home_page</param>
                <param name="namespace">/</param>
            </result>
        </action>
    </package>
</struts>